<%- include ('partials/header') %>
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">
    <link href="/css/sb-admin-2.min.css" rel="stylesheet">
    <br>
    <h2 style="margin:auto; text-align: center;">Pick Up Requests:(<span id="total"><%= posts.length %></span>):</h2>
    <br>
    <div class="container">
      <% if(posts.length === 0) { %>
        <br>
          <center><h4> There are no PickupRequests at the moment </h4></center>
        <br>
      <% } else { %>
          <%for (var i=0 ; i< posts.length; i++){%>
              <div class="card" i>
                  <div class="card-header">
                    Posted By: <%= posts[i].rider%>
                  </div>
                  <div class="card-body">
                    <h5 class="card-title"><strong>Pick Up: </strong><%= posts[i].pickuplocation%></h5>
                    <h5 class="card-title"><strong>Drop off: </strong><%= posts[i].dropofflocation%></h5>
                    <p class="card-text"><strong>Message: </strong><%= posts[i].usermessage %></p>
                    <% if(user.isDriver) {%>
                        <a href="/chat/<%= posts[i].userId %>" class="btn btn-primary">Chat With the User</a>
                    <% } %>
                  </div>
                </div>
                <br>
          <%}%>
        <% } %>
    </div>
    <script src="/socket.io/socket.io.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.24.0/moment-with-locales.min.js"></script>
    <script src="/js/io2.js"></script>
<%- include ('partials/footer') %>