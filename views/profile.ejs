<%- include ('partials/header') %>
    <br>
    <div class="container-fluid">
        <center><h1 class="text-dark mb-4"><%= user["firstName"] %>'s Profile</h1></center>
        <div class="row">
            <div class="col-4"></div>
            <div class="col-4">
                <div class="card mb-12">
                    <div class="card-body text-center shadow"><img class="rounded-circle mb-3 mt-4" src="https://image.shutterstock.com/image-vector/user-icon-trendy-flat-style-260nw-418179865.jpg" width="160" height="160">
                    </div>
                </div>
            </div>
            <div class="col-4"></div>
        </div>
        <br>
        <div class="row">
            <div class="col-3"></div>
            <div class="col-6">
                <div class="card shadow mb-3">
                    <div class="card-header py-3">
                        <center><p class="text-primary m-0 font-weight-bold">User Profile</p></center>
                    </div>
                    <div class="card-body">
                        <form>
                            <div class="form-group">
                                <label for="first_name"><strong>First Name</strong></label>
                                <input class="form-control" type="text" value=<%= user["firstName"] %> name="first_name" disabled>
                            </div>
                            <div class="form-group">
                                <label for="last_name"><strong>Last Name</strong></label>
                                <input class="form-control" type="text" value=<%= user["lastName"] %> name="last_name" disabled>
                            </div>
                            <div class="form-group">
                                <label for="username"><strong>Username</strong></label>
                                <input class="form-control" type="text" value=<%= user["username"] %> name="username" disabled>
                            </div>
                            <div class="form-group">
                                <label for="email"><strong>Email Address</strong></label>
                                <input class="form-control" type="email" value=<%= user["email"] %> name="email" disabled>
                            </div>
                            <center><div class="form-group"><button class="btn btn-primary" type="button" onclick="window.location.href = '/profile/edit/<%= user["username"] %>';">Edit Profile</button></div></center>
                        </form>
                    </div>
                </div>
            </div>
            <div class="col-3"></div>
        </div>

<%- include ('partials/footer') %>