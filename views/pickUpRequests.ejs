<%- include ('partials/header') %>
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">
    <link href="/css/sb-admin-2.min.css" rel="stylesheet">
    <br>
    <h2 style="margin:auto; text-align: center;">My Pick Up Requests:</h2>
    <br>
    <div class="container">
      <% if(requests.length === 0) { %>
        <br>
          <h4> There are no PickupRequests for you at the moment </h4>
        <br>
      <% } else { %>
          <%for (var i=0 ; i<requests.length; i++){%>
              <div class="card">
                  <div class="card-header">
                    <%= requests[i].rider%>
                  </div>
                  <div class="card-body">
                    <h5 class="card-title"><strong>Pick Up: </strong><%= requests[i].pickup%></h5>
                    <h5 class="card-title"><strong>Drop off: </strong><%= requests[i].dropoff%></h5>
                    <p class="card-text"><strong>Message: </strong><%= requests[i].message %></p>
                    <form  method="post">
                      <% if(isDriver) {%>
                        <button type="submit" name="accept" formaction="/accept/<%= requests[i]._id %>" class="btn btn-success">Accept</button>
                          <button type="submit" name="reject" formaction="/reject/<%= requests[i]._id %>" class="btn btn-danger">Reject</button>
                      <%}else {%>
                          <button type="submit" name="cancel" formaction="/cancel/<%= requests[i]._id %>" class="btn btn-danger">Cancel</button>
                      <%}%>
                    </form>
                  </div>
                </div>
                <br>
          <%}%>
        <% } %>
    </div>
<%- include ('partials/footer') %>